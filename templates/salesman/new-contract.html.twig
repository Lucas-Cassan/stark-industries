{% extends 'base.html.twig' %}

{% block title %}New contract page{% endblock %}


{% block body %}
    <h1>Bienvenue sur la page pour créer un nouveau contrat !</h1>

    {{ form_start (form,{ 'attr': {'id': 'newContrat'} }) }}

        <div>
            <h2>ADHÉRENT</h2>
            {{  form_row(form.gender)}}

            {{  form_row(form.lastname )}}

            {{ form_row(form.firstname )}}

            {{ form_row(form.birthday.day,   {'attr':{'placeholder':'Jour' } })}}
            {{ form_row(form.birthday.month, {'attr':{'placeholder':'Mois' } })}}
            {{ form_row(form.birthday.year,  {'attr':{'placeholder':'Année' } })}}

            {{ form_row(form.address )}}

            {{ form_row(form.zipcode )}}

            {{ form_row(form.city )}}

            {{ form_row(form.country )}}

            {{ form_row(form.phone, {'attr':{'class':'phone' } } )}}

            {{ form_row(form.mobile,  {'attr':{'class':'mobile' } } )}}

            {{ form_row(form.mail )}}
        </div>

        <div>
            <h2>MANDAT DE PRÉLÉVEMENT</h2>

            {{ form_row(form.iban,  {'attr':{'class':'iban' } } )}}

            {{ form_row(form.bic )}}

        </div>

    {{ form_errors(form) }}
    {{ form_end(form) }}

    <script>
        var cleaveIban = new Cleave('.iban', {
            blocks: [4, 4, 4, 4, 4, 4, 3],
            uppercase: true
        });

        var cleavePhone = new Cleave('.phone', {
            blocks: [2, 2, 2, 2, 2],
            numericOnly: true,
        });
        var cleaveMobile = new Cleave('.mobile', {
            blocks: [2, 2, 2, 2, 2],
            numericOnly: true,
        });
    </script>
{% endblock %}


