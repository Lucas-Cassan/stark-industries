{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="h-screen w-screen flex items-center justify-center bg-gray-50 flex-col">
       <div class="w-full max-w-lg flex items-center justify-center flex-col space-y-8 bg-gray-300 p-16 rounded-2xl">
           <h1 class="text-2xl font-extrabold text-gray-900">Réinitialisation du mot de passe</h1>

           {% for flashError in app.flashes('reset_password_error') %}
               <div class="alert alert-danger" role="alert">{{ flashError }}</div>
           {% endfor %}

           {{ form_start(requestForm) }}
           {{ form_row(requestForm.email, {'attr':{'class':'phone' }, 'label_attr':{'class':'sr-only'} } ) }}
           <div>
               <small>
                   Entrez votre identifiant et nous vous enverrons un lien pour réinitialiser votre mot de passe
               </small>
           </div>

           <button class="w-full bg-blue-600 text-white rounded-md p-1">Envoyer mail de réinitialisation</button>
           {{ form_end(requestForm) }}
       </div>
    </div>
{% endblock %}